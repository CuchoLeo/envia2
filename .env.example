# Sistema de Seguimiento de OC - Configuración de Ejemplo
# Copia este archivo como .env y configura tus valores

# ============================================================================
# GENERAL
# ============================================================================
APP_NAME="Sistema de Seguimiento OC"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# ============================================================================
# BASE DE DATOS
# ============================================================================
DATABASE_URL="sqlite:///./data/oc_seguimiento.db"

# ============================================================================
# IMAP - Monitoreo de Confirmaciones de Reserva
# ============================================================================
IMAP_HOST="outlook.office365.com"
IMAP_PORT=993
IMAP_USERNAME="tu_email@tuempresa.com"
IMAP_PASSWORD="tu_contraseña_o_contraseña_de_aplicacion"
IMAP_MAILBOX="INBOX"
IMAP_USE_SSL=true
IMAP_CHECK_INTERVAL=300

# ============================================================================
# SMTP - Envío de Correos
# ============================================================================
SMTP_HOST="smtp.office365.com"
SMTP_PORT=587
SMTP_USERNAME="tu_email@tuempresa.com"
SMTP_PASSWORD="tu_contraseña_o_contraseña_de_aplicacion"
SMTP_FROM_EMAIL="tu_email@tuempresa.com"
SMTP_FROM_NAME="Kontrol Travel - Administración"
SMTP_USE_TLS=true

# ============================================================================
# IMAP - Recepción de Órdenes de Compra
# ============================================================================
OC_INBOX_HOST="outlook.office365.com"
OC_INBOX_PORT=993
OC_INBOX_USERNAME="tu_email@tuempresa.com"
OC_INBOX_PASSWORD="tu_contraseña_o_contraseña_de_aplicacion"
OC_INBOX_MAILBOX="INBOX"
OC_INBOX_USE_SSL=true
OC_CHECK_INTERVAL=300

# ============================================================================
# SCHEDULER
# ============================================================================
SCHEDULER_CHECK_HOUR=9
SCHEDULER_CHECK_MINUTE=0
SCHEDULER_CHECKS_PER_DAY=4

# ============================================================================
# WEB SERVER
# ============================================================================
WEB_HOST="0.0.0.0"
WEB_PORT=8001
WEB_RELOAD=true

# ============================================================================
# ADMINISTRACIÓN
# ============================================================================
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme123"

# ============================================================================
# CONFIGURACIÓN DE CORREOS
# ============================================================================
EMAIL_CC_RECIPIENTS="administracion@tuempresa.com"
DAYS_FOR_REMINDER_1=2
DAYS_FOR_REMINDER_2=4

# ============================================================================
# CLIENTES QUE REQUIEREN OC (separados por comas)
# ============================================================================
AGENCIES_REQUIRING_OC="WALVIS S.A.,EMPRESA CORPORATIVA LTDA,AGENCIA VIAJES XYZ"

# ============================================================================
# GOOGLE CLOUD (Opcional)
# ============================================================================
GCP_PROJECT_ID=""
GCP_BUCKET_NAME=""
GOOGLE_APPLICATION_CREDENTIALS=""

# ============================================================================
# NOTIFICACIONES (Opcional)
# ============================================================================
SLACK_WEBHOOK_URL=""
SYSTEM_NOTIFICATION_EMAIL=""
